<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondo_pantalla1"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:orientation="horizontal"
        android:layout_weight="0.19"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:orientation="horizontal">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3.00" />

        <TextView
            android:id="@+id/fechadehoy"
            android:layout_width="317dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="fecha de hoy"
            android:textColor="@android:color/background_light"
            android:textSize="50sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:orientation="horizontal">

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:text="FARMACIA"
        android:textAlignment="center"
        android:textColor="#1b5e20"
        android:textSize="130sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/farmaciadeldia"
        android:layout_width="match_parent"
        android:layout_height="193dp"
        android:text="DORA MALLER"
        android:textAlignment="center"
        android:textColor="#1b5e20"
        android:textSize="118sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="110dp"
            android:layout_height="110dp"
            app:srcCompat="@android:drawable/ic_menu_directions" />

        <TextView
        android:id="@+id/callenumero"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:text="Direccion"
        android:textSize="80sp"
        android:textStyle="bold" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:layout_weight="0.49">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="110dp"
            android:layout_height="96dp"
            app:srcCompat="@android:drawable/ic_menu_call" />

        <TextView
            android:id="@+id/telefonopantalla"
            android:layout_width="636dp"
            android:layout_height="wrap_content"
            android:text="Telefono"
            android:textSize="80sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="33dp"
        android:layout_height="35dp"
        app:srcCompat="@android:drawable/ic_notification_clear_all" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>