<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lautaro.turnos.AltaFarmacia"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lista actual de farmacias "
        android:textSize="30sp" />


        <ListView
            android:id="@+id/listaFarmacias"
            android:layout_width="wrap_content"
            android:layout_height="387dp"
            android:choiceMode="singleChoice"
            android:layout_weight="0.99"></ListView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    </LinearLayout>


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DescripciÃ³n Farmacia"
        android:textSize="30sp"
        android:textStyle="bold" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView3"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textSize="30sp" />
        <EditText
            android:id="@+id/tNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:text="Calle"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/tCalle"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />
        <TextView

            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:text="Nro."
            android:textSize="30sp" />

        <EditText
            android:id="@+id/tNumeroCalle"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Telefono"
            android:textSize="30sp" />
        <EditText
            android:id="@+id/tTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/Agregar"
            android:layout_width="287dp"
            android:layout_height="wrap_content"
            android:text="Agregar"
            android:textStyle="bold"
            android:layout_weight="0.51" />

        <Button
            android:id="@+id/Modficar"
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.55"
            android:text="Modifcar"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>
