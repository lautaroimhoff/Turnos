<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context="com.example.lautaro.turnos.GestionTurnos"
    >

    <CalendarView
        android:id="@+id/calendario"
        android:layout_width="match_parent"
        android:layout_height="232dp"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:text="Farmacia de turno:"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/farmaciadeturno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No asignado."
            android:textSize="36sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_weight="0.01">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:text="Asignar el turno del dia : "
            android:textSize="36sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:text="Asignar el turno del dia : "
            android:textSize="36sp" />

        <TextView
            android:id="@+id/diaturno"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="dd/mm/aaaa"
            android:textSize="36sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="220dp"
            android:layout_height="53dp"
            android:text="A Farmacia: "
            android:textSize="36sp" />

        <Spinner
            android:id="@+id/comboBox"
            android:layout_width="match_parent"
            android:layout_height="54dp" />


    </LinearLayout>


    <Button
        android:id="@+id/asignarTurno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Asignar turno" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal"></LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04"
        android:text="Carga masiva de turnos "
        android:textSize="36sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="291dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <DatePicker
                android:id="@+id/calendario2"
                android:layout_width="321dp"
                android:layout_height="203dp" />

            <Spinner
                android:id="@+id/comboBox2"
                android:layout_width="match_parent"
                android:layout_height="41dp" />

            <Button
                android:id="@+id/agregarTurno"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Agregar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="459dp"
            android:layout_height="303dp"
            android:orientation="vertical"
            android:weightSum="1">

            <ListView
                android:id="@+id/listaMasiva"
                android:layout_width="411dp"
                android:layout_height="244dp" />

            <Button
                android:id="@+id/confimaCargaMasiva"
                android:layout_width="410dp"
                android:layout_height="40dp"
                android:text="Confimar carga masiva " />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal">

    </LinearLayout>

    <Spinner
        android:id="@+id/comboBox3"
        android:layout_width="396dp"
        android:layout_height="41dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="    Desde                     Hasta"
        android:textSize="36sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="157dp"
        android:orientation="horizontal"
        android:layout_weight="0.87">

        <DatePicker
            android:id="@+id/calendario3"
            android:layout_width="278dp"
            android:layout_height="198dp" />

        <DatePicker
            android:id="@+id/calendario4"
            android:layout_width="278dp"
            android:layout_height="198dp" />

    </LinearLayout>

    <Button
        android:id="@+id/confimaVaca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONFIRMAR VACACIONES" />


</LinearLayout>